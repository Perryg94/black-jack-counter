<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<GridPane fx:controller="it.fresca.blackjackcounter.CardCounterController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <GridPane fx:id="cardGrid" alignment="CENTER" hgap="5" vgap="5" />

    <Button fx:id="resetButton" text="Reset Count" onAction="#resetCardCount" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="cardCountLabel" text="Card count=0" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>
